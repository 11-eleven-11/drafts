#!/usr/bin/env node

const fs = require('fs')
const path = require('path')

const typings = [
  'es5',
  'es2015.core',
  'es2015.collection',
  'es2015.generator',
  'es2015.promise',
  'es2015.iterable',
  'es2015.proxy',
  'es2015.reflect',
  'es2015.symbol',
  'es2015.symbol.wellknown'
]

let result = []

typings.forEach(t => {
  result.push(
    fs.readFileSync(
      path.resolve(__dirname, `../node_modules/typescript/lib/lib.${t}.d.ts`),
      'utf-8'
    )
  )
})

fs.writeFileSync(
  path.resolve(__dirname, '../definitions/es6.d.ts'),
  result.join('\n')
)
